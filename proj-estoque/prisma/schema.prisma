generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Localidade {
  municipio_id   Int       @id
  municipio_nome String
  uf_id          Int
  uf_sigla       String
  uf_nome        String
  produtos       Produto[]
}

model Produto {
  id                  Int         @id @default(autoincrement())
  nome                String
  referencia          String
  unidade_medida      String
  vlr_venda           Float
  estoque             Float?      @default(0)
  fabricante          String?
  municipio_fabricado String?
  uf_fabricado        String?
  image_url           String?
  localidade_id       Int?
  localidade          Localidade? @relation(fields: [localidade_id], references: [municipio_id])
}
